@model List<EmployeeApp.Models.LeaveViewModel>

@if (Model.Any())
{
    <div id="leaveTableWrapper">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>S No</th>
                    <th>Leave Type</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Description</th>
                    <th>Applied Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var leave = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@leave.LeaveType</td>
                        <td>@leave.From.ToString("dd-MM-yyyy")</td>
                        <td>@leave.To.ToString("dd-MM-yyyy")</td>
                        <td>@leave.Description</td>
                        <td>@leave.AppliedDate.ToString("dd-MM-yyyy")</td>
                        <td>@leave.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div id="userNoResultsMessage" class="alert alert-warning mt-3">
        No leave found for selected status.
    </div>
}


@functions {
    string GetBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Approved" => "success",
            "Rejected" => "danger",
            _ => "secondary"
        };
    }
}
