@using Microsoft.AspNetCore.Identity
@using EmployeeApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-white">Hello, @UserManager.GetUserName(User)!</span>
        </li>
        <li class="nav-item">
            <form method="post" asp-page="/Account/Logout">
                <button type="submit" class="btn btn-outline-light ms-2">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary me-2" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
